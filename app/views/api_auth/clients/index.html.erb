<h1>客户</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Desc</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.desc %></td>
        <td>
          <%= link_to '编辑', edit_client_path(client) %>
          <%= link_to '授权', apis_client_path(client) %>
          <%= link_to '删除', client, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新建客户', new_client_path %>
