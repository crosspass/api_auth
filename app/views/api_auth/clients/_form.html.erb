    <%= form.label :email %>
    <%= form.text_field :email, id: :client_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :desc %>
    <%= form.text_area :desc, id: :client_desc, class: 'form-control' %>
  </div>

  <div class="actions">
